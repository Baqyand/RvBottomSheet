    <RelativeLayout
        android:id="@+id/RL_laptop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:elevation="15dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/img_laptop"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:scaleType="fitXY"
            tools:src="@android:color/holo_blue_bright"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="24dp"
            android:layout_toEndOf="@id/img_laptop"
            android:layout_toRightOf="@id/img_laptop"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Nama Laptop"/>
            <TextView
                android:id="@+id/tv_Harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Harga Laptop"/>
            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Detail Laptop"/>

            <Button
                android:id="@+id/show_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lihat List"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>